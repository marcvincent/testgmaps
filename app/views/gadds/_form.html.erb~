<%= form_for(@gadd) do |f| %>
  <% if @gadd.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gadd.errors.count, "error") %> prohibited this gadd from being saved:</h2>

      <ul>
      <% @gadd.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field" visibility:hidden>
    <%= f.label :latitude %><br />
    <%= f.text_field :latitude %>
  </div>
  <div class="field">
    <%= f.label :longitude %><br />
    <%= f.text_field :longitude %>
  </div>

  <div class="field">
    <%= f.label :gmaps_zoom %><br />
    <%= f.text_field :gmaps_zoom %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
