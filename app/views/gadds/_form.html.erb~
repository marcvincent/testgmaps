<%= form_for(@gadd) do |f| %>
  <% if @gadd.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gadd.errors.count, "error") %> prohibited this gadd from being saved:</h2>

      <ul>
      <% @gadd.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <table>
  <tr>
    <th><%= f.label :name %></th>
    <th><%= f.label :latitude %></th>
    <th><%= f.label :longitude %></th>
    <th><%= f.label :gmaps_zoom %></th>
  </tr>

  <tr>
    <th><%= f.text_field :name %></th>
    <th><%= f.text_field :latitude %></th>
    <th><%= f.text_field :longitude %></th>
    <th><%= f.text_field :gmaps_zoom %></th>
  </tr>

	</table>



	<br/>

  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>
